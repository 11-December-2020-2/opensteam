<% render_headline 'categories_icon', "Edit Product ##{@product.id}", 'content-header/headline_icon.jpg' %>
<% render_header_buttons 'Save', :request_id => 'product_form', :class => 'save-button' %>

<div id="errors">
  <%= error_messages_for :product %>
</div>


<div id="editor-wrapper">
  <table cellpadding="0" cellspacing="0">
    <tr>
      <td width="200">
        <%= product_navigation( @product, :active => :general ) %>
      </td>
      <td width="20"><br /></td>
      <td width="100%" id="editor_content">
        <%= render :partial => "form_content" %>
      </td>
    </tr>
  </table>
</div>



