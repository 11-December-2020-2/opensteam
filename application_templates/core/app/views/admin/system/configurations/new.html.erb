<h1>New configuration</h1>

<% form_for( :configuration, @configuration, :url => { :action => :create }, :html => { :method => :post } ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :key %><br />
    <%= f.text_field :key %>
  </p>
  <p>
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_system_configurations_path %>
