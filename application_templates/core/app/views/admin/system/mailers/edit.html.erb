<% render_headline 'categories_icon', 'Edit Mailer Config', 'content-header/headline_icon.jpg' %>
<% render_header_buttons "Save", :form_id => 'mailer_form' %>

<% form_for :mailer, :url => admin_system_mailer_path( @mailer ), :html => { :id => 'mailer_form', :method => :put } do |f| %>
  <div id="dvEditorTabContainer">
    <div id="general_tab" class="x-hide-display" title="Tax Zone">
      <table cellpadding="0" cellspacing="0" class="editor-form">
        <tr>
          <td class="label"><%= f.label :mailer_class %></td>
          <td class="content"><%= f.text_field :mailer_class, :disabled => true, :class => "inputFields" %></td>
        </tr>
        <tr>
          <td class="label"><%= f.label :mailer_method %></td>
          <td class="content"><%= f.text_field :mailer_method, :disabled => true, :class => "inputFields" %></td>
        </tr>
        <tr>
          <td class="label"><%= f.label :active %></td>
          <td class="content"><%= f.check_box :active %></td>
        </tr>
      </table>
    </div>
  </div>
  <div id="dvEditorTabFooter">
    <div id="dvEditorTabFooter-inner">
      <div id="dvEditorTabFooterLeft">&nbsp;</div>
      <div id="dvEditorTabFooterRight">&nbsp;</div><br clear="all" />
    </div>
  </div>
<% end %>

<% javascript_tag do %>

  build_tabs( 'dvEditorTabContainer', [
  { contentEl: 'general_tab', title: 'Information', listeners: { activate: checkTab_setFooterButtons },
  button: {
  left: 	{ title: "index", url: '<%= admin_config_tax_groups_path %>' },
  right: 	{ title: "save", clickEvent: "$('mailer_form').submit(); return false;" }
  }
  }
  ] ) ;
<% end %>