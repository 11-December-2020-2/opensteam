Category: <%= @category.self_and_ancestors.collect { |cat| link_to cat.name, category_path( cat ) }.join( " > ") %>

<h1><%=h @category.name %></h1>
<br />
<div id="category_description">
	<%=h @category.description %>
</div>

<div id="product_list">
	<ul>
	<% for product in @category.products %>
		<li><b><%=h product.type %></b> <%=h product.name %> <%= link_to "details", show_product_path( product ) %><br /></li>
	<% end %>
	</ul>
</div>