<% render_headline 'categories_icon', "Categories for #{@product.class} '#{@product.name}'", 'content-header/headline_icon.jpg' %>
<% render_header_buttons 'Save', :form_id => 'product_categories_form', :class => 'save-button' %>




<div id="editor-wrapper">
	<table cellpadding="0" cellspacing="0">
		<tr>
			<td width="200">
				<%= product_navigation( @product, :active => :categories ) %>
			</td>
			<td width="20"><br /></td>
			<td width="100%" id="editor_content">
				<% form_for @product, :url => [ :admin, :catalog, @product ], :html => { :id => "product_categories_form", :method => :put } do |f| %>
				<div id="dvEditorTabContainer">
					<div id="product_categories" class="x-hide-display" >
						<%= f.hidden_field :categories_ids %>
						<div id="product-category-tree"></div>

						<%= render :partial => "/admin/_tree/tree", :locals => { 
							:model => "category", 
							:render_to => "category-tree", 
							:url => '/admin/catalog/categories/',
							:checkable => false,
							:expand_all => true }
						%>

						<script>
							var mytree = configureTree( { 
								url: '<%= admin_catalog_product_x_path( @product, :categories, :format => :json ) %>',
								baseAttrs:{checked:false}, 
								renderTo:'product-category-tree',
								baseParams:{format:'json',product_class:'<%= @product.class %>',product_id:<%= @product.id %> }
								}, <%= @categories.to_json %>  ) ;

								mytree.on('checkchange', function( node, checked) {
									$('<%= @product.class.to_s.underscore %>_categories_ids').value = mytree.getChecked('id').join(',') ;
								}) ;

								Ext.onReady( function() {
									mytree.render() ;
								}) ;
						</script>
					</div>
				</div>
				<div id="dvEditorTabFooter">
					<div id="dvEditorTabFooter-inner">
						<div id="dvEditorTabFooterLeft">&nbsp;</div>
						<div id="dvEditorTabFooterRight">&nbsp;</div><br clear="all" />
					</div>
				</div>
				<% end %>
			</td>
		</tr>
	</table>
</div>


		<% javascript_tag do %>
		build_tabs( 'dvEditorTabContainer', [
		{ contentEl: 'product_categories', title: 'Categories', listeners: { activate: checkTab_setFooterButtons },
		button: {
			left: 	{ title: "cancel", url: '<%= url_for([:admin, :catalog, @product]) %>' },
			right: 	{ title: "Save", clickEvent: "$('product_categories_form').submit(); return false;" }
		}
	}
	] ) ;
	<% end %>


