<% render_headline 'categories_icon', 'Product Classes', 'content-header/headline_icon.jpg' %>
<% render_header_buttons %>



<div id="grid-wrapper">
  <div id="grid">
    <% grid_table do %>
      <thead>
        <tr>
          <th class="first no-menu no-sort not-in-context no-resize"><div>&nbsp;</div></th>
          <th><div>Name</div></th>
          <th><div>Entries</div></th>
          <th class="last"><div>&nbsp;</div></th>
        </tr>
      </thead>
      <tbody>
        <% for product in @products %>
          <tr>
            <td class="first"></td>
            <td><%= product.classify %></td>
            <td><%= product.classify.constantize.count %></td>
            <td class="last"><%= link_to "Show Entries", product %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </div>
</div>