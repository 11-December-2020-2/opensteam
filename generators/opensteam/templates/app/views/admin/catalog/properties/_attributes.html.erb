<table cellpadding="0" cellspacing="0" class="editor-form">
  <% unless hide_klass %>
    <tr>
      <td class="label"><%= label_tag :klass, "Property Class" %>
      <td class="content"><%= select_tag :klass, options_for_select( Property.property_classes ) %>
        <% javascript_tag do %>transform2ComboBox("klass") <% end %>
      </td>
    </tr>
  <% end %>
  <tr>
    <td class="label"><%= f.label :value %>
    <td class="content"><%= f.text_field :value, :class => "inputFields" %></td>
  </tr>
  <tr>
    <td class="label"><%= f.label :unit %></td>
    <td class="content"><%= f.select :unit, ['String', 'Integer', 'Float'] %>
      <% javascript_tag do %>transform2ComboBox("property_unit") <% end %>
    </td>
  </tr>
</table>