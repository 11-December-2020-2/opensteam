<%% render_headline 'categories_icon', "New <%= class_name %>", 'content-header/headline_icon.jpg' %>
<%% render_header_buttons 'Save', :form_id => '<%= singular_name %>_form', :class => 'save-button' %>

<%%= error_messages_for :<%= singular_name %> %>

<div id="editor-wrapper">
  <table cellpadding="0" cellspacing="0">
    <tr>
      <td width="200">
        <%%= property_navigation( @<%= singular_name %> , :active => :general ) %>
      </td>
      <td width="20"><br /></td>
      <td width="100%" id="editor_content">
        <%% form_for :<%= singular_name %> , @<%= singular_name %> , :url => { :action => :create }, :html => { :id => "<%= singular_name %>_form", :method => :post } do |f| %>
          <div id="dvEditorTabContainer">
            <div id="general_tab" class="x-hide-display" >
              <%%= render :partial => "admin/catalog/<%= plural_name %>/attributes", :locals => { :button_name => "Update", :f => f } %>
            </div>
          </div>
          <div id="dvEditorTabFooter">
            <div id="dvEditorTabFooter-inner">
              <div id="dvEditorTabFooterLeft">&nbsp;</div>
              <div id="dvEditorTabFooterRight">&nbsp;</div><br clear="all" />
            </div>
          </div>
        <%% end %>
      </td>
    </tr>
  </table>
</div>


<%% javascript_tag do %>
  build_tabs( 'dvEditorTabContainer', [
  { contentEl: 'general_tab', title: 'Attributes', listeners: { activate: checkTab_setFooterButtons },
  button: {
  left: 	{ title: "cancel", url: '<%%= url_for([:admin, :catalog, @<%= singular_name %> ]) %>' },
  right: 	{ title: "save", clickEvent: "$('<%= singular_name %>_form').submit(); return false;" }
  }
  }

  ] ) ;
<%% end %>
